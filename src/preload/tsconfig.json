{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*",
      ],
      "@main/*": [
        "../main/*"
      ],
      "@renderer/*": [
         "../renderer/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../shared/**/*",
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
