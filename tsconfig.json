{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/dist-server/shared/*"
      ],
      "/@main/*": [
        "./*"
      ],
      "/@utils/*": [
        "src/utils/*",
        "dist-server/utils/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
